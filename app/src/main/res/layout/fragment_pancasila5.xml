<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3fb34f"
    tools:context="com.example.rifar.belanegara.Pancasila5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:contentDescription="Bull"
            android:src="@drawable/bull" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Kerakyatan yang dipimpin oleh hikmat kebijkasanaan dalam permusyawaratan perwakilan"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </LinearLayout>
</RelativeLayout>
